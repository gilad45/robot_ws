<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <link name="base_footprint"/>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.05" rpy="0 0 0" />
    </joint>

    <link name="base_link">
        <visual>
            <origin xyz="0.07 0 0.02" rpy="0 0 0" />
            <geometry>
                <box size="0.25 0.16 0.1" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 0.8 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.07 0 0.02" rpy="0 0 0" />
            <geometry>
                <box size="0.25 0.2 0.1" />
            </geometry>
        </collision>
    </link>

    <joint name="lidar" type="fixed">
        <parent link="base_link" />
        <child link="lidar_link"/>
        <origin xyz="0.065 0 0.17" rpy="0 0 0"/>
    </joint>

    <link name="lidar_link">
        <visual>
            <origin xyz="0 0 -0.06" rpy="0 0 0" />  
            <geometry>
                <cylinder radius="0.03" length="0.09"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.06" rpy="0 0 0" />  
            <geometry>
                <cylinder radius="0.03" length="0.09"/>
            </geometry>
        </collision>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="0 0.09 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="right_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="0 -0.09 0" rpy=" ${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy=" 0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="-0.02" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="castor_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="castor_wheel_link" />
        <origin xyz="0.16 0 -0.03" rpy="0 0 0" />
        <axis xyz="1 1 1" />
    </joint>

    <link name="castor_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.02" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>


</robot>

    
    